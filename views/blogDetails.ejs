<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title><%= Blog.title %></title>
</head>
<body>

<%- include("./partials/nav") %>

<div class="container mt-5">

    <div class="card shadow border-0">

        <!-- Image -->
        <img src="<%= Blog.thumbnailUrl %>" 
             class="card-img-top"
             style="height:400px; object-fit:cover;" />

        <div class="card-body">

            <!-- Title -->
            <h2 class="fw-bold"><%= Blog.title %></h2>

            <!-- Author -->
            <p class="text-muted">
                By: <%= Blog.createdBy.fullName || Blog.createdBy.email %>
            </p>

            <hr>

            <!-- Full Blog Content -->
            <pre style="line-height:1.8;">
                <%= Blog.body %>
            </pre>
        </div>
    </div>

</div>

<%- include("./partials/scripts") %>

</body>
</html>
